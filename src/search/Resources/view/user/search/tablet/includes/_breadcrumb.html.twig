{% trans_default_domain 'search' %}

<section class="container py-4 px-4">
    <h2 class="visually-hidden">Хлебные крошки</h2>
    <nav class="d-flex align-items-center gap-2" aria-label="breadcrumb" style="--bs-breadcrumb-divider: '-';">
        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor" class="bi bi-caret-right-fill text-muted me-1" viewBox="0 0 16 16"><path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"></path></svg>
        <ol class="breadcrumb m-0" style="font-size: 11px;">

            <li class="breadcrumb-item">
                <a href="{{ path('core:public.homepage') }}"
                   class="text-secondary text-decoration-none"
                   aria-label="{{ 'breadcrumb.homepage.user'|trans({}, 'core') }}"
                   title="{{ 'breadcrumb.homepage.user'|trans({}, 'core') }}">
                    {{ 'breadcrumb.homepage.user'|trans({}, 'core') }}
                </a>
            </li>

            <li class="breadcrumb-item active" aria-current="page"
                aria-label="{{ 'breadcrumb.label'|trans }}"
                title="{{ 'breadcrumb.title'|trans }}">
                {{ 'breadcrumb.title'|trans }}
            </li>

        </ol>
    </nav>
</section>