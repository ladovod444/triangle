{# БЛОК "КАТЕГОРИИ" #}

<section class="container py-3 ">

    <ul class="d-flex flex-wrap gap-1 "
        id="v-pills-tab"
        role="tablist"
        aria-orientation="vertical">

        {% set parent_active = false %}

        {% for category in categories %}

            <li class="list-group-item bg-transparent border-0 text-truncate " style="min-width: 200px;">
                <a href="{{ path('products-product:public.catalog.category', { category : category.category_url }) }}"
                   class="d-flex gap-3 align-items-center fw-medium text-black text-uppercase rounded-5 px-3 fs-18 text-decoration-none py-3">

                    <div class="icon m-0 rounded-3 bg-contain lazy p-1 shadow"
                         style="width: 50px; height: 50px;"
                         data-bg="{{ cdn_image_path(
                             name: category.category_cover_image,
                             ext: category.category_cover_ext,
                             cdn: category.category_cover_cdn,
                         ) }}">
                    </div>

                    {{ category.category_name }}

                </a>
            </li>

        {% endfor %}
    </ul>
</section>