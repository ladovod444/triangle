<main class="main ">


	<section id="favorites " class="container py-3">
		<div class="d-flex justify-content-between align-items-center">
			<h1 class="h4 text-uppercase fw-bolder py-2">Избранное</h1>
		</div>

		{{ include(_self|replace({ "content.html.twig": "includes/breadcrumb.html.twig" })) }}

		{% if query %}
			<div class="row row-cols-4 g-2">

				{% for card in query %}
					{% include Template('@products-product/public/'~baks_settings.device~'/card-product-result.html.twig') with {product: card, forms} only %}
				{% endfor %}

			</div>


		{% else %}
			<p>Здесь пока ничего нет</p>
		{% endif %}

	</section>

</main>

<hr class="my-0">
