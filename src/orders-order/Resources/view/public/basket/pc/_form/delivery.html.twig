{% trans_default_domain('user.order') %}

<h3 class="fs-6 mb-4 fw-bold">Доставка</h3>

<div id='user_delivery' class="row justify-content-between fw-medium mb-3">

    {# Дата доставки   #}
    <div class="col-3">

        {{ form_label(form.usr.delivery.deliveryDate, 'Дата доставки (самовывоза)'|trans, { 'label_attr': { 'class' : 'form-label' }}) }}
        : *

        <div class="input-group mb-3">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-calendar3" viewBox="0 0 16 16">
                        <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"></path>
                        <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"></path>
                    </svg>
                </span>
            {{ form_widget(form.usr.delivery.deliveryDate) }}
        </div>
    </div>

    {# Способы доставки #}
    <div class="col-3">

        <label class="form-label">Способы доставки: *</label>

        {# Виды доставки #}

        {% for delivery in form.usr.delivery.delivery %}
            <div class='d-flex align-items-center justify-content-start gap-2 mb-2'>

                {{ form_widget(delivery, { 'attr': { 'class' : 'form-check-input' }}) }}

                {{ form_label(delivery, null, { 'label_attr': { 'class' : 'form-check-label' }}) }}

                {% if delivery.vars.attr['data-price'] %}

                    {% set DeliveryPrice =  money((delivery.vars.attr['data-price'] * 100), delivery.vars.attr['data-currency']) %}

                    <strong class="mb-1">({{ DeliveryPrice }})</strong>

                    {% if delivery.vars.attr['data-excess'] %}

                        {% set DeliveryPrice =  money((delivery.vars.attr['data-excess'] * 100), delivery.vars.attr['data-currency'] ) %}

                        &nbsp; <span class="badge text-bg-danger">+ {{ DeliveryPrice }} за 1 км</span>
                    {% endif %}

                {% else %}

                    <strong class="mb-1">(бесплатно)</strong>

                {% endif %}

            </div>
        {% endfor %}

        {# Инфо #}
        {% if form.usr.delivery.delivery.vars.help %}

            <p class="text-secondary mb-2 text-nowrap" style="font-size:11px;">
                {{ form.usr.delivery.delivery.vars.help }}
            </p>

        {% endif %}

    </div>

    {# Пункты выдачи #}
    <div class="col-5">
        {% for delivery_field in form.usr.delivery.field %}

            {{ form_label(delivery_field.value, null, { 'label_attr': { 'class': "pt-0"}} ) }}

            {{ form_widget(delivery_field.field) }}
            {{ form_widget(delivery_field.value) }}

        {% endfor %}
    </div>

    {# Координаты доставки #}
    {% if form.usr.delivery.latitude.vars and form.usr.delivery.longitude.vars %}
        <div class="col-3">
            {{ form_row(form.usr.delivery.latitude) }}
            {{ form_row(form.usr.delivery.longitude) }}
        </div>
    {% endif %}
</div>

<hr class="border-secondary">
