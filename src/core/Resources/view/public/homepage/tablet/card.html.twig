<div class="card rounded-4 mb-3 mx-1">
	<div class="card-image-wrap overflow-hidden border rounded-4 " style="height: 175px;">
		<div class="d-flex justify-content-between">

			<div class="btn text-secondary opacity-25 card-favorites px-1 pt-2">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
					 class="bi bi-heart-fill" viewBox="0 0 16 16">
					<path fill-rule="evenodd"
						  d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"></path>
				</svg>
			</div>

			<div class="mt-2 me-1">
				<span class="badge bg-success rounded-2 me-1">Новинка</span>
				<span class="badge bg-danger rounded-2">Акция</span>
			</div>
		</div>
		<a href="/detail" class="py-3">
			<img data-src="/temp/img/card-img/shina-1.webp" src="/assets/img/empty.png"
				 class="lazy card-img-top"
				 alt="Triangle Sports TH201 195/45 R16 84W"
				 width="250">
		</a>
	</div>
	<div class="card-body p-2">

		<div class="card-price-wrap d-flex justify-content-between ">
			<span class="fw-bolder h4">4 800 Р.</span>
			<small class="small text-decoration-line-through text-danger fw-bold">6 000 Р.</small>
		</div>

		<div class="small lh-normal fw-bolder">
			<a href="/detail" class="text-uppercase text-decoration-none text-dark">
				Triangle Sports TH201 195/45 R16 84W
			</a>
		</div>

		<div class="d-flex justify-content-between">
			<div class="d-flex gap-1 align-items-center">
				{% include '@Template/default/user/tablet/includes/rating.html.twig' %}
			</div>
			<div>
				<span class="badge bg-hit rounded-2">Хит</span>
			</div>
		</div>

		<div class="card-labels d-flex gap-2 mt-2">
			<img data-src="/temp/img/sun.png" src="/assets/img/empty.png"
				 class="lazy"
				 alt="..."
				 style="width: 13px; height: 13px;"
				 >

			<img data-src="/assets/img/snowflake.png" src="/assets/img/empty.png"
				 class="lazy"
				 alt="..."
				 style="width: 13px; height: 13px;"
				 >
			<img
					data-src="/assets/img/sun-2.png" src="/assets/img/empty.png"
					class="lazy"
					alt="..."
					style="width: 13px; height: 13px;"
					>

			<img data-src="/assets/img/ship.png" src="/assets/img/empty.png"
				 alt="..."
				 class="lazy"
				 style="width: 13px; height: 13px;"
			>
		</div>
	</div>
</div>