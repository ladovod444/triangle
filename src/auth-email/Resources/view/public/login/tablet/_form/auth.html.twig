{{ form_start(form,
    { attr:
        { 'class': 'd-flex flex-column align-items-center gap-3 px-4 mb-5' }
    }) }}

<div class="form-group w-100 ">

    {{ form_label(form.email, 'E-mail:',
        {'label_attr': {
            'class': 'mb-2 ms-2 fw-medium fs-12'}
        }) }}

    {{ form_widget(form.email, {
        attr: {
            'class': 'form-control rounded-5'
        }}) }}

</div>

<div class="form-group w-100">

    {{ form_label(form.password, 'Пароль*:',
        {'label_attr': {
            'class': 'mb-2 ms-2 fw-medium fs-12'}
        }) }}

    {{ form_widget(form.password, {
        attr: { class: 'form-control rounded-5' } }) }}

</div>

{{ form_widget(form.login,
    {
        label: 'Войти',
        attr: { class: 'btn bg-primary rounded-3 py-2 fw-bold w-100 '}}
) }}

{{ form_end(form) }}
