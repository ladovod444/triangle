<main class="main container">
	
	<div class="mt-3 container">
		{{ include(_self|replace({ "content.html.twig": "breadcrumb.html.twig" })) }}
	</div>
	
	<div class="container d-flex justify-content-center my-5 pb-5" style="width: 750px;">
		
		<div class="w-75 d-flex position-relative">
			<img data-src="/assets/login/img/login.webp" src="/assets/img/empty.webp"
					class="lazy position-absolute start-0"
					alt="..." width="380"
			>
		</div>
		
		<div class="w-100">
			
			<form action="#" class="shadow d-flex flex-column align-items-end px-5 py-3 rounded-3 w-100">
				
				<div class="d-flex justify-content-between w-100 mb-4 align-items-end small">
					<h3 class="modal-title text-uppercase h4 fw-bold">Авторизация</h3>
					<a href="{{ path('auth-email:user.registration') }}" aria-label="Регистация" class="small mb-1">Регистация</a>
				</div>
				
				<div class="d-flex flex-column gap-4 w-100 small">
					
					<div class="w-100 d-flex flex-column gap-2">
						<label for="login-email">Электронная почта:</label>
						<input class="form-control rounded-3"
								type="email" id="login-email" required="">
					</div>
					
					<div class="w-100 d-flex flex-column gap-2">
						
						<div class="d-flex justify-content-between">
							<label for="login-password">Пароль:</label>
							<a href="#" aria-label="Забыли пароль?" class="small">Забыли пароль?</a>
						</div>
						
						<input class="form-control rounded-3"
								type="password" id="login-password"
								required="">
					</div>
					
					<div class="w-100">
						<button type="submit" class="btn btn-lg btn-danger w-100  rounded-3">
							<span class="small text-uppercase fw-bolder">Войти</span>
						</button>
					</div>
				
				</div>
			
			</form>
		</div>
	
	</div>

</main>


