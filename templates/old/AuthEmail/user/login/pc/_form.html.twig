{% trans_default_domain 'user.login' %}

{{ form_start(form, { attr: { class: 'shadow d-flex flex-column align-items-end p-5 rounded-3 w-100' } }) }}

<div class="d-flex justify-content-between w-100 mb-4 align-items-end small ps-3">
	<h3 class="text-uppercase h4 fw-bold mb-0">{{ 'user.page'|trans }}</h3>
	
	<a href="{{ path('AuthEmail:user.registration') }}" class="small py-1"
			aria-label="{{ 'user.page'|trans({}, 'user.reg') }}"
			title="{{ 'user.page'|trans({}, 'user.reg') }}"
	>
		{{ 'user.page'|trans({}, 'user.reg') }}
	</a>
</div>

<div class="d-flex flex-column gap-3 w-100 small ps-3">
	
	<div class="w-100 d-flex flex-column gap-2">
		{{ form_row(form.email, {
			label: 'user.form.label.email'
		}) }}
	</div>
	
	<div class="w-100 d-flex flex-column">
		<div class="d-flex justify-content-between">
			{{ form_label(form.password, 'user.form.label.password', { attr: { tabindex : "-1" } }) }}
			
			<a href="{{ path('AuthEmail:user.restore') }}" class="small"
					aria-label="{{ 'user.form.label.question'|trans({}, 'user.restore') }}"
					title="{{ 'user.form.label.question'|trans({}, 'user.restore') }}"
					tabindex="-1"
			>
				{{ 'user.form.label.question'|trans({}, 'user.restore') }}
			</a>
		</div>
		
		{{ form_widget(form.password) }}
	
	</div>
	
	{{ form_row(form.login, {
		label: '<span>'~ 'user.btn.save'|trans() ~'</span>
				<span id="'~form.login.vars.id~'-progress" class="spinner-border spinner-border-sm d-none"></span>
			',
		attr: { class : 'btn btn-lg btn-danger w-100 rounded-3 small text-uppercase fw-bolder' }
	}) }}

</div>
{{ form_end(form) }}