				<button class="btn btn-link icon bg-cover rounded-4 lazy img-product"
						data-bg="{{ card.product_image ? img_path ~ card.product_image ~ product_image_ext : '/assets/img/blank.svg' }}"
						style="width: 70px; height: 70px;"
						aria-label="Triangle Sports TH201"
				></button>
				
				<button class="btn btn-link icon bg-cover rounded-4 lazy img-product"
						data-bg="{{ card.product_image ? img_path ~ card.product_image ~ product_image_ext : '/assets/img/blank.svg' }}"
						style="width: 70px; height: 70px;"
						aria-label="Triangle Sports TH201"
				></button>
			
			</div>
			
			{{ include(_self|replace({ "content.html.twig": "_lightbox.html.twig" })) }}
		
		</div>
		
		{# ХАРАКТЕРИСТИКИ #}
		
		<div class="w-100">
			<h3 class="h6 mb-3 ms-2">Характеристики:</h3>
			
			
			{# {{ dd(arr_property | filter(public => public.f2 == true)) }}
			#}
			
			<div class="d-flex flex-column gap-3">
				
				{% set odd = 'bg-light' %}
				{% set even = '' %}
				
				
				{# Торговое предложение #}
				{% if card.product_offer_value %}
					
					{% set odd = '' %}
					{% set even = 'bg-light' %}
					
					<div class="d-flex justify-content-between p-2 rounded-4 {{ even }}">
						<div class="w-50">
							{{ card.product_offer_name }}
						</div>
						<div class="w-50 d-flex gap-3 align-items-center">
							{# Значение торгового предложения #}
							{{ card.product_offer_value|call_twig_func(card.product_offer_reference~'_render') }}
						</div>
					</div>
				
				{% endif %}
				
				
				{# Множественный вариант  #}
				{% if card.product_variation_value %}
					
					{% set odd = 'bg-light' %}
					{% set even = '' %}
					
					<div class="d-flex flex-column gap-3">
						
						<div class="d-flex justify-content-between p-2 rounded-4 {{ even }}">
							<div class="w-50">
								{{ card.product_variation_name }}
							</div>
							<div class="w-50 d-flex gap-3 align-items-center">
								{# Значение множественного варианта ТП #}
								{{ card.product_variation_value|call_twig_func(card.product_variation_reference~'_render') }}
							</div>
						</div>
					</div>
				{% endif %}
				
				{% if card.product_modification_value %}
					
					{% set odd = '' %}
					{% set even = 'bg-light' %}
					
					<div class="d-flex flex-column gap-3">
						
						<div class="d-flex justify-content-between p-2 rounded-4 {{ even }}">
							<div class="w-50">
								{{ card.product_modification_name }}
							</div>
							<div class="w-50 d-flex gap-3 align-items-center">
								{# Значение модификации множественного варианта ТП #}
								{{ card.product_modification_value|call_twig_func(card.product_modification_reference~'_render') }}
							</div>
						</div>
					</div>
				{% endif %}
				
				
				{# Свойства, учавствующие в харкатеристиках #}
				{% for key, name_property in  arr_property | filter(public => public.f2 == true) %}
					{# {{ name_property.f5|call_twig_func(name_property.f3) }} #}
					
					
					<div class="d-flex justify-content-between p-2 rounded-4 {{ cycle([odd, even], loop.index0) }}">
						<div class="w-50">
							{{ name_property.f4 }}
						</div>
						<div class="w-50 d-flex gap-3 align-items-center">
							{% set render = name_property.f5|call_twig_func(name_property.f3~'_render') %}
							
							{# {{ dump(name_property.f3) }} #}
							
							{% if render %}
								{{ render|raw }}
							{% else %}
								{{ name_property.f5|call_twig_func(name_property.f3) }}
							{% endif %}
							
							
							{# {% set result = name_property.f5|call_twig_func(name_property.f3) %}
							{% if render != result %}
								{{ name_property.f5|call_twig_func(name_property.f3~'_render') }}
							{% endif %}
							{{ result }} #}
							
							
							{# {{ name_property.f5|call_twig_func(name_property.f3~'_render') }} {{ name_property.f5|call_twig_func(name_property.f3) }}} #}
							
							
							{# {{ name_property.f5|call_twig_func(name_property.f3) }} #}
						</div>
					</div>
				
				{% endfor %}
			
			
			</div>
			
			
			{# {{ include(_self|replace({ "content.html.twig": "_characteristic.html.twig" })) }} #}
		</div>
		
