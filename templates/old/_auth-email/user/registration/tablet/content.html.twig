<main class="main container">

    <div class="mt-3 container">
        {{ include(_self|replace({ "content.html.twig": "breadcrumb.html.twig" })) }}
    </div>

    <div class="container d-flex justify-content-center my-5 pb-5" style="width: 750px;">

        <div class="w-75 d-flex position-relative align-items-center">
            <img data-src="/assets/reg/img/reg.webp" src="/assets/img/empty.webp"
                 class="lazy position-absolute start-0 w-100" style="margin-left: 1.5rem;"
                 alt="..." width="340"
            >
        </div>

        <div class="w-100">

            <form action="#" class="shadow d-flex flex-column align-items-end ps-5 pe-4 py-3 rounded-3 w-100">

                <div class="d-flex justify-content-between w-100 mb-4 align-items-end small">
                    <h3 class="modal-title text-uppercase h4 fw-bold">Регистрация</h3>
                    <a href="{{ path('auth-email:user.login') }}" class="small py-1"
                       aria-label="Вход в личный кабинет"
                    >
                        Вход в личный кабинет</a>
                </div>

                <div class="d-flex flex-column gap-4 w-100 small">

                    <div class="w-100 d-flex flex-column gap-2">
                        <label for="login-email">Электронная почта:</label>
                        <input class="form-control rounded-3"
                               type="email" id="login-email" required="">
                    </div>

                    <div class="w-100 d-flex flex-column gap-2">

                        <div class="d-flex justify-content-between">
                            <label for="login-password">Пароль:</label>
                            <a href="#" aria-label="Забыли пароль?" class="small">Забыли пароль?</a>
                        </div>

                        <input class="form-control rounded-3"
                               type="password" id="login-password"
                               required="">
                    </div>

                    <div class="form-check form-control-lg">
                        <input type="checkbox" id="registration_form_agreeTerms"
                               name="registration_form[agreeTerms]"
                               required="required"
                               class="form-check-input" value="1" checked="checked">
                        <label class="form-check-label required small " for="registration_form_agreeTerms">
							<span class="small">
								<span class="small ">Согласен с </span>
								<a href="#" class="small" aria-label="Пользовательское соглашение">пользовательским соглашением</a>
							</span>
                        </label>
                    </div>

                    <div class="w-100">
                        {# <button type="submit" class="btn btn-lg btn-danger w-100  rounded-3">
							<span class="small text-uppercase fw-bolder">Войти</span>
						</button> #}
                        {% if CAPTCHA is defined %}
                            <div id="my-widget"
                                 class="frc-captcha d-none"
                                 data-sitekey="{{ CAPTCHA }}"
                                 data-start="auto"
                                 data-callback="myCallback"
                                    {# data-error="myCallbackError" #}
                                 data-lang="ru"
                            ></div>


                        {% endif %}
                        <button id="register-submit" type="button"
                                class="btn btn-lg btn-danger w-100 rounded-3 small text-uppercase fw-bolder align-items-center"
                                disabled="disabled"
                        >
                            <span class="small text-uppercase fw-bolder">Зарегистрироваться</span>
                            <span id="indicator-progress" class="spinner-border spinner-border-sm"
                                  role="status" aria-hidden="true" aria-label="Регистрация"></span>
                        </button>
                    </div>

                </div>

            </form>
        </div>

    </div>

</main>


