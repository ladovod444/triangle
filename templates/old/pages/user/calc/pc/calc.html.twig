					<tr>
						<td>Высота профиля, мм (B)</td>
						<td id="oldB" class="text-center fw-bolder"></td>
						<td id="newB" class="text-center fw-bolder"></td>
						<td id="difB" class="text-center fw-bolder">&nbsp;</td>
					</tr>
					<tr>
						<td>Внутренний диаметр, мм (C)</td>
						<td id="oldC" class="text-center fw-bolder"></td>
						<td id="newC" class="text-center fw-bolder"></td>
						<td id="difC" class="text-center fw-bolder"></td>
					</tr>
					<tr>
						<td>Внешний диаметр, мм (D)</td>
						<td id="oldD" class="text-center fw-bolder"></td>
						<td id="newD" class="text-center fw-bolder"></td>
						<td id="difD" class="text-center fw-bolder"></td>
					</tr>
					<tr>
						<td colspan="3">Изменение дорожного просвета, мм</td>
						<td id="difClearense" class="text-center fw-bolder"></td>
					</tr>

					</tbody>
				</table>

				<table class="table table-striped table-borderless">

					<thead>
					<tr class="small">
						<th colspan="2" class="text-center">Показания спидометра</th>
					</tr>
					</thead>
					<tbody class="small">

					<tr>
						<td class="vertical-middle">Показания спидометра, км/ч</td>
						<td class="text-center">
							<input type="number" min="1" max="400" value="90" id="oldSpeed"
								   class="form-control form-control-sm"
								   title="Показания спидометра"
								   ></td>
					</tr>

					<tr>
						<td>Реальная скорость, км/ч</td>
						<td id="newSpeed" class="text-center fw-bolder"></td>
