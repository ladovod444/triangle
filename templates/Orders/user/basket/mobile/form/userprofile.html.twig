				<div class="card-title">
					<h5>
						{# Название секции #}
						{{ value.vars.data.sectionName }}
					</h5>
				</div>
			</div>
		
		
		{% endif %}
		
		
		
		{# РЕНДЕР ПОЛЕЙ #}
		{# {{ render_field(value.vars.data.type, value.value) }} #}
		{# {{ render_field(value.vars.data.type, value.value) }} #}
		
		
		{% if value.value is  defined %}
			
			<div>
				<div class="w-100 d-flex gap-2">
					
