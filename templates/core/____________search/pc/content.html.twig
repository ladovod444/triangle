<main class="main d-print-none container px-4">

    <div class="mt-3">
        {{ include(_self|replace({ "content.html.twig": "breadcrumb.html.twig" })) }}
    </div>

    <h1 class="h3 text-uppercase fw-bolder h4">
        Поиск
    </h1>


    {{ form_start(search) }}

    <div class="w-100 d-flex mb-3">

        {{ form_widget(search.query, { attr: { class : 'border-light w-100', style : 'min-width: 100%;' } }) }}

        <div class="w-100 position-relative">
            <button class="btn position-absolute top-0 end-0" type="submit" aria-label="Поиск">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-search text-secondary" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                </svg>
            </button>
        </div>

        {# <a href="/refresh" class="btn btn-link text-muted">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                 class="mb-1" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"></path>
                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"></path>
            </svg>
        </a> #}

        <input type="hidden" name="token" value="{{ csrf_token('search') }}"/>

        {# <button type="submit" class="btn btn-primary btn-lg round-ignore has-ripple">Найти</button> #}

    </div>

    {{ form_end(search) }}

    {% if modification %}
        <ul class="dropdown-menu show border-light container p-1 position-relative mb-3 z-index-1">
            {% set result = modification %}
            {{ include(_self|replace({ "content.html.twig": "modification.html.twig" })) }}

        </ul>
    {% endif %}

    {% if products %}
        <ul class="dropdown-menu show border-light container p-1 position-relative mb-3 z-index-1">
            {% set result = products %}
            {{ include(_self|replace({ "content.html.twig": "products.html.twig" })) }}
        </ul>
    {% endif %}


</main>


