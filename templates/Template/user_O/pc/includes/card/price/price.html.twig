				<path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"></path>
			</svg>
		</button> #}



        {# Стоимость продукта #}
        <div class="card-price d-flex flex-column align-items-end">
                <span class="fw-bolder h5 mb-0 lh-1">
                    {{ discount ? money(discount, card.product_currency) : money(card.product_price, card.product_currency) }}
                </span>
        </div>

        <button
                data-href="{{ path('orders-order:user.add', {
                    product: card.event,
                    offer : product_offer.offer_uid,
                    variation : product_offer.variation_uid,
                    modification : product_offer.modification_uid
                }) }}"
                class="btn btn-sm btn-danger py-0 pb-1 rounded-3 modal-link add-basket"
                data-bs-toggle="modal"
                data-bs-target="#modal"
                title="Купить"
        >
            <span class="px-2">купить</span>
