<main class="main container px-4">

	<div class="mt-3">
		{{ include(_self|replace({ "content.html.twig": "breadcrumb.html.twig" })) }}
	</div>


	<section id="reviews">

		<div class="d-flex justify-content-between align-items-center">

			<h1 class="h4 text-uppercase fw-bolder mt-2">Отзывы Шины Triangle TR652 </h1>

			<button type="button" class="btn btn-lg btn-danger rounded-4">
				<span class="h5 text-uppercase mb-0 px-3">Оставить отзыв</span>
			</button>
		</div>

		{# РЕЙТИНГ #}
		<div class="d-flex gap-1 align-items-center">
			{% include '@Template/default/user/pc/includes/rating.html.twig' %}
			<a href="#reviews" class="small ms-3" aria-label="Отзывы" title="Отзывы">9 отзывов</a>
		</div>

		<div class="d-flex flex-column gap-3 mt-3">
			{% for i in 0..5 %}
				{% include('@Template/default/user/pc/includes/review.html.twig') %}
			{% endfor %}
		</div>

		<div class="mt-5">
			{#{{ include(_self|replace({ "content.html.twig": "pagination.html.twig" })) }}#}
			{% include('@Template/default/user/pc/includes/pagination.html.twig') %}
		</div>

	</section>

	<hr class="mt-5 rounded-circle border-0" style="height: 20px; box-shadow: 0 20px 20px -6px #000;">

</main>


