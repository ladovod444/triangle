	{# {{ dd(category) }} #}
	
	{% for key, cat in category %}
		
		{% if products[key]|length %}
		
		
		
		<section class="cards-box mt-5">
			<div class="container">
				<div class="row">
					
					<div class="col-9">
						<div class="d-flex gap-4">
							<h2 class="text-uppercase h5 fw-bolder">{{ cat.category_name }}</h2>
							<a href="{{ path('Product:user.catalog.category', { url : cat.category_url }) }}"
									class="small text-lowercase">Все {{ cat.category_name }}</a>
							
							{% if is_granted('ROLE_ADMIN') %}
								<a href="/refresh" class="btn  btn-link text-muted">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
											class="mb-1" viewBox="0 0 16 16">
										<path fill-rule="evenodd"
												d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"></path>
										<path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"></path>
									</svg>
								</a>
							{% endif %}
						</div>




						<div class="row cards-box-body mt-3">
							{% for product in products[key] %}
								<div class="col-3">
									{% include Template('/user/pc/includes/card.html.twig') with { 'card': product }  %}
								</div>
							{% endfor %}
						</div>
					</div>

					<div class="col-3">
						
						{# ЛИДЕРЫ ПРОДАЖ #}
						
						<div class="block-heading">
							<h2 class="text-uppercase h5 fw-bolder mb-4">Лидеры продаж {{ cat.category_name }}</h2>
						</div>


						
						<div class="rounded-4 bg-light d-flex flex-column gap-3 p-3">
							{% include Template('user/'~baks_settings.device~'/includes/leader.html.twig') with { 'leader' : leader[key] } %}

						</div>
						
						{# МЕСТО ВАШЕЙ РЕКЛАМЫ #}
						
						{# <a href="#" class="side-bar-image rounded-4 overflow-hidden w-100 mt-4 d-flex"
