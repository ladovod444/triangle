{# ---- ШАБЛОН ------------------------------------------------------------ #}
{% extends Template('/user/base.html.twig') %}

{% block content %}

    <main class="main d-print-none container px-4">

        <div class="mt-3">
            {{ include(_self|replace({ "error.html.twig": "breadcrumb.html.twig" })) }}
        </div>

        <div class="alert alert-warning" role="alert">

            <div class='d-flex justify-content-between align-items-center'>
                <div>
                    <h3>{{ status_text|trans({}, '') }}</h3>
                    Начните с главной страницы или воспользуйтесь поиском.
                </div>

                <a href='{{ path('core:user.homepage') }}' class="btn btn-lg btn-primary text-nowrap btn">
                    <span class="h6 text-uppercase px-3 basket-text">Продолжить покупки</span><span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
                </a>
            </div>

        </div>
    </main>

{% endblock %}